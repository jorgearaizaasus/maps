        android:layout_height="200dp"
        android:layout_width="200dp"
        android:id="@+id/imagedrawer"
        android:src="@drawable/android_platform"/>
    <TextView
        android:layout_height="59dp"
        android:layout_width="wrap_content"
        android:text="textview numero 1"/>
    <TextView
        android:layout_height="59dp"
        android:layout_width="wrap_content"
        android:text="textview numero 2"/>
    <TextView
        android:layout_height="59dp"
        android:layout_width="wrap_content"
        android:text="textview numero 3"/>

</LinearLayout>